#!/usr/bin/env bash

set -euo pipefail

PLUGIN_DIR="$HOME/.config/zellij/plugins"
mkdir -p "$PLUGIN_DIR"

curl -fsSL "https://github.com/dj95/zjstatus/releases/latest/download/zjstatus.wasm" \
    -o "$PLUGIN_DIR/zjstatus.wasm"

curl -fsSL "https://github.com/b0o/zjstatus-hints/releases/latest/download/zjstatus-hints.wasm" \
    -o "$PLUGIN_DIR/zjstatus-hints.wasm"
